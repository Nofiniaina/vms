{# templates/vote/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer un Vote{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100 py-10">
    <div class="bg-white shadow-lg rounded-2xl w-full max-w-lg p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Créer un Vote</h1>

        {{ form_start(voteForm, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                {{ form_label(voteForm.name, 'Nom du vote', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(voteForm.name, {'attr': {'class': 'w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-2'}}) }}
                {{ form_errors(voteForm.name) }}
            </div>

            <div>
                {{ form_label(voteForm.descri, 'Description', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(voteForm.descri, {'attr': {'class': 'w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-2'}}) }}
                {{ form_errors(voteForm.descri) }}
            </div>

            <div>
                {{ form_label(voteForm.start, 'Date de début', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(voteForm.start, {'attr': {'class': 'w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-2'}}) }}
                {{ form_errors(voteForm.start) }}
            </div>

            <div>
                {{ form_label(voteForm.end, 'Date de fin', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(voteForm.end, {'attr': {'class': 'w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-2'}}) }}
                {{ form_errors(voteForm.end) }}
            </div>

            <div class="pt-4">
                <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 rounded-lg shadow-md transition-all duration-200">
                    Enregistrer
                </button>
            </div>

        {{ form_end(voteForm) }}
    </div>
</div>
{% endblock %}
